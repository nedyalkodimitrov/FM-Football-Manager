{% extends 'security/baseSecurity.html.twig'%}

    {% block link %}
        <link rel="stylesheet" href="{{ asset('css/loginPage.css') }}" />
        <link rel="stylesheet" href=" {{ asset("css/progressBar.css") }}">
    {% endblock %}


    {% block body %}
        <form   action="{{ path('signIn') }}" method="post" class="container text-center col-lg-4 col-md-6 col-sm-9 mt-5 form" >
            <div class="container text-center mt-5" >
                <div class="input-group mb-3">
                    <input class="effect-2 " type="text" placeholder=" Email" id="email" aria-label="Email" aria-describedby="basic-addon1" name="_username">
                    <span class="focus-border"></span>
                </div>
                <div class="input-group mb-3">
                    <input class="effect-2 " type="password" placeholder="Password" id="pass" aria-label="Name" aria-describedby="basic-addon1" name="_password">
                    <span class="focus-border"></span>
                </div>
            </div>

            <div class="col-6 mx-auto mt-5">
                <button class="btn btn-primary col-12 btn-submit" type="submit" id="btn">Sign In</button >
            </div>
        </form>
        <p class=" mt-3 justify-content-center text-center"> <a href="{{path("signUp_page")}}" class="a-signUp">Нямате акаунт?</a></p>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}




    {% endblock %}








